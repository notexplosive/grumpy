{
  "name": "Not So Grump",
  "version": "1.0",
  "description": "Not So Grump extension NotExplosive",
  "permissions": ["storage", "https://www.youtube.com/*"],
  "page_action": {
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["content.js"]
    }
  ],
  "manifest_version": 2
}
